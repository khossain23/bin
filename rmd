# A function for reading Markdown files with pandoc and lynx.
#pandoc "$1" | lynx -stdin

# Using the grip utility.
session="grip"

tmux start-server

tmux new-session -d -s $session -n grip

tmux selectp -t 1
tmux splitw -h -p 50

tmux selectp -t 1
tmux send-keys "grip $pwd$1" C-m

tmux selectp -t 2
tmux send-keys "chrome http://localhost:6419/" C-m 
